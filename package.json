{
  "name": "controle-contas-backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --clear src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "build": "tsc",
    "start": "node dist/index.js",
    "restart": "npm run db:reset && npm run db:migrate && npm run db:seed",
    "db:reset": "npx prisma migrate reset --force",
    "db:migrate": "npx prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "coverage:open": "xdg-open coverage/lcov-report/index.html",
    "test:coverage:open": "npm run test:coverage && npm run coverage:open",
    "test:watch": "jest --watchAll",
    "test:watch:coverage": "jest --watchAll --coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.3.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "eslint": "^8.45.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "prisma": "^6.6.0",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  }
}
